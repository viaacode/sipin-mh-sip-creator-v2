<mets:structMap>
  <mets:div TYPE="Film" DMDID="DMDID-FILM" {% if amdid != '' %}ADMID="{{ amdid }}"{% endif %}>
    <mets:div TYPE="Media" DMDID="DMDID-FILM-METS">
      <mets:div TYPE="Representation" LABEL="Original">
        <mets:fptr FILEID="FILEID-METS" />
      </mets:div>
    </mets:div>
    {%- for file in files %}
    <mets:div TYPE="Media" DMDID="{{ file.dmd_id }}">
      <mets:div TYPE="Representation" LABEL="Original">
        <mets:fptr FILEID="{{ file.id }}" />
      </mets:div>
    </mets:div>
    {%- endfor %}
  </mets:div>
</mets:structMap>