<mets:fileSec>
    <mets:fileGrp USE="Original">
        {% for file in files %}
        <mets:file ID="{{ file.id }}" CHECKSUM="{{ file.checksum }}" CHECKSUMTYPE="MD5" USE="{{ file.archive_location }}">
            <mets:FLocat xlink:href="representation_{{ file.representation_index }}/{{ file.original_name }}" LOCTYPE="URL" />
        </mets:file>
        {% endfor %}
        <mets:file ID="FILEID-METS" USE="Disk">
            <mets:FLocat xlink:href="mets.xml" LOCTYPE="URL" />
        </mets:file>
    </mets:fileGrp>
</mets:fileSec>